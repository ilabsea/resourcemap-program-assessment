- if mobile
  - if single_editing_mode
    = ko_text_field_tag :value, hasfocus: true, event: {keydown: :keyPress, blur: :save}, attr: {id: "'calculation-input-' + code"}
  - else
    = ko_text_field_tag :value, html: {class: 'right w20'}, attr: {id: "'calculation-input-' + code"}
    .clear
- else
  - if single_editing_mode
    = ko_text_field_tag :value, hasfocus: true, event: {keydown: :keyPress, keyup: :validateRangeAndDigitsPrecision, blur: :save}, css: { error: :error }, attr: {id: "'calculation-input-' + code"}, html: {readonly: "readonly"}
  - else
    = ko_text_field_tag :value, html: {class: 'right w20', readonly: "readonly"}, event: {blur: :valid}, css: {error: :error}, attr: {id: "'calculation-input-' + code"}
    .clear
