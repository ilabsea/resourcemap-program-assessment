%div{ class: "box centered w60 rm-dialog hidden", id: "rm-share-url-dialog", style: "margin-left: -200px; margin-top: -100px;" }
  %h3
    = t('views.collections.index.print_report')
  %p
    Please click on the link below for HTML print view.
    You can copy this link below to share with others to view this report.
  %p
    %a#share-url-dialog{href: "", target: :_blank, style: 'color:#777777;'}

  %div
    %p
      %a#get-pdf{ko(click: :getPdf), href: "", target: :_blank, class: 'button white'} Email me Print view in PDF format

  %div{ style: "padding-top: 10px;"}
    %p
      %button{ type: "button", value: "Close", class: "white rm-dialog-cancel" } Close

:javascript
  $(function(){
    $.fn.rmDialog = function(options){
        return this.each(function(){
            $(this).show();
            dialog = $(this);
            $(this).find(".rm-dialog-cancel").on("click", function(){
                dialog.hide();
            });
        });
    }
  });
